class counter {
	int count;
	
	// must be synchronized method
	synchronized void increment() {
		count++;
	}
}





public class multiThreadingUsingSynchronized {
	public static void main(String[] args) throws Exception{
		counter c = new counter();
		
		// lamda function it will implements the body for run()
		// created instance for thread 
		Thread t1 = new Thread(()  -> {
			for(int i =1; i<=1000; i++) {
				c.increment();
			}
		});
		
	
		Thread t2 = new Thread(()  -> {
			for(int i =1; i<=1000; i++) {
				c.increment();
			}
		});
		
		
		t1.start();
		t2.start();
		
		
		// join will keep the thread to wait while another hit the button
		t1.join();
		t2.join();
		
		System.out.println(c.count);
		
	}

}
