import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

class count{
	int a = 0;
	count(){
		
		Frame frame = new Frame("Counter");
		
		TextField text = new TextField(a);
		text.setBounds(50, 50, 30, 30);
		
		Button btn = new Button("click me");
		btn.setBounds(100, 100, 100, 50);
		
		Button reset = new Button("Reset");
		reset.setBounds(210, 100, 100, 50);
		
		frame.add(text);
		frame.add(btn);
		frame.add(reset);
		
		frame.setLayout(null);
        frame.setSize(500, 500);
        frame.setVisible(true);	
        
        
        ActionListener incrementCount = new ActionListener() {
        	public void  actionPerformed(ActionEvent e) {
        		a++;
        		text.setText(String.valueOf(a));
        	}
        };
        
        ActionListener resetCount = new ActionListener() {
        	public void actionPerformed(ActionEvent e) {
        		a = 0;
        		text.setText(String.valueOf(a));
        	}
        };
        
        reset.addActionListener(resetCount); 
        btn.addActionListener(incrementCount);
		
	}
}


class increment {

	public static void main(String[] args) {
		new count();

	}

}
